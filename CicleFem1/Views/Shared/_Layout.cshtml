    <div id="wrapper">
        <!-- Sidebar -->
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul id="sidebar_menu" class="sidebar-nav">
                <li class="sidebar-brand"><a id="menu-toggle" href="@Url.Action("Index", "Home")"><span id="main_icon" class="fa fa-chevron-right"></span></a></li>
            </ul>
            <ul class="sidebar-nav" id="sidebar">
                <li><a href="@Url.Action("Index", "Home")">Home<span class="sub_icon fa fa-home"></span></a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contatti<span class="sub_icon fa fa-address-card-o"></span></a></li>
                <li><a href="@Url.Action("About", "Home")">Chi siamo<span class="sub_icon fa fa-slideshare"></span></a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="@Url.Action("Index", "Schedas")">Schede<span class="sub_icon fa fa-line-chart"></span></a></li>
                }
            </ul>
            <ul class="sidebar-nav sidebar-bottom">
                @Html.Partial("_LoginPartial")
            </ul>
        </div>

        <!-- Page content -->
        <div id="page-content-wrapper" class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - CRGest Camen Ciclo Femminile</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("active");
        });
    </script>
